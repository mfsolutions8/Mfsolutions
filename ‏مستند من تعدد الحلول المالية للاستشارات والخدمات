<script>
  const secAr = document.getElementById('sec-ar');
  const secEn = document.getElementById('sec-en');
  const btnAr = document.getElementById('btn-ar');
  const btnEn = document.getElementById('btn-en');

  function show(lang){
    if(lang==='ar'){
      secAr.classList.add('active'); secEn.classList.remove('active');
      document.documentElement.setAttribute('lang','ar');
      document.documentElement.setAttribute('dir','rtl');
    }else{
      secEn.classList.add('active'); secAr.classList.remove('active');
      document.documentElement.setAttribute('lang','en');
      document.documentElement.setAttribute('dir','ltr');
    }
    localStorage.setItem('mfs_lang', lang);
    window.scrollTo({top:0,behavior:'smooth'});
  }
  btnAr.addEventListener('click',()=>show('ar'));
  btnEn.addEventListener('click',()=>show('en'));
  const saved = localStorage.getItem('mfs_lang');
  show(saved==='en'?'en':'ar');
</script>
